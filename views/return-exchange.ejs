<%- include('./partials/Header.ejs') %>

  <main style="padding: var(--spacing-xl) 0; min-height: 80vh; background-color: var(--color-bg-primary);">
    <div class="container" style="max-width: 800px;">

      <div
        style="background: white; padding: 3rem; border-radius: var(--border-radius-lg); box-shadow: var(--shadow-md);">
        <h1
          style="font-size: 2.5rem; font-family: var(--font-heading); margin-bottom: 2rem; padding-bottom: 1rem; border-bottom: 1px solid var(--color-border);">
          Return & Exchange</h1>

        <div class="prose" style="font-size: 1.1rem; line-height: 1.8; color: var(--color-text-secondary);">
          <p style="margin-bottom: 1.5rem;">
            We want you to love what you ordered! If you aren't completely happy with your purchase, we're here to help.
          </p>

          <h3 style="color: var(--color-text-primary); font-size: 1.3rem; margin-top: 2rem; margin-bottom: 1rem;">Return
            Policy</h3>
          <ul style="list-style: disc; padding-left: 1.5rem; margin-bottom: 1.5rem;">
            <li>Items can be returned within <strong>7 days</strong> of delivery.</li>
            <li>Items must be unworn, unwashed, and with original tags attached.</li>
            <li>Sale items are final sale and cannot be returned unless defective.</li>
          </ul>

          <h3 style="color: var(--color-text-primary); font-size: 1.3rem; margin-top: 2rem; margin-bottom: 1rem;">How to
            Exchange</h3>
          <p style="margin-bottom: 1.5rem;">
            To initiate an exchange, please contact our support team at <a href="mailto:support@bunnyhop.com"
              style="color: var(--color-accent-primary);">support@bunnyhop.com</a> with your Order ID and reason for
            exchange.
          </p>

          <div style="margin-top: 2rem; text-align: center;">
            <a href="/" class="btn btn-outline">Continue Shopping</a>
          </div>
        </div>
      </div>

    </div>
  </main>

  <%- include('./partials/Footer.ejs') %>