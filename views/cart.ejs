<%- include('./partials/Header.ejs', {hidden: true}) %>

  <main style="padding: var(--spacing-xl) 0; min-height: 80vh; background-color: var(--color-bg-primary);">
    <div class="container">
      <h1 style="font-size: 2rem; margin-bottom: 2rem; text-align: center; font-family: var(--font-heading);">Shopping
        Cart</h1>

      <% if(error && error.length> 0) { %>
        <div
          style="background: #fee2e2; color: #dc2626; padding: 1rem; border-radius: var(--border-radius-md); margin-bottom: 2rem; text-align: center; max-width: 600px; margin-left: auto; margin-right: auto;">
          <%= error[0] %>
        </div>
        <% } %>

          <% if (cart.length===0) { %>
            <div
              style="text-align: center; padding: 4rem; background: white; border-radius: var(--border-radius-lg); box-shadow: var(--shadow-sm); max-width: 600px; margin: 0 auto;">
              <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs"
                type="module"></script>
              <div style="display: flex; justify-content: center; margin-bottom: 1rem;">
                <dotlottie-player src="https://lottie.host/2d6c4f0e-5635-486c-b693-c4356c8238de/vXf432q1q3.json"
                  background="transparent" speed="1" style="width: 200px; height: 200px;" loop
                  autoplay></dotlottie-player>
              </div>
              <h3 style="margin-bottom: 0.5rem;">Your cart is empty</h3>
              <p style="color: var(--color-text-secondary); margin-bottom: 2rem;">Looks like you haven't added anything
                yet.</p>
              <a href="/" class="btn btn-primary">Start Shopping</a>
            </div>
            <% } else { %>
              <div class="cart-layout"
                style="display: grid; grid-template-columns: 1.5fr 1fr; gap: 3rem; align-items: start;">

                <!-- Cart Items List -->
                <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                  <% let price=0; let discountedTotal=0; let hasDiscount=false; %>
                    <% cart.forEach((product)=> {
                      let productPrice = user !== "unsigned" ? product.productId.price : product.price;
                      let productTitle = user !== "unsigned" ? product.productId.title : product.title;
                      let productImage = user !== "unsigned" ? product.productId.mainImage : product.image;
                      let productId = user !== "unsigned" ? product.productId._id : product.productId;

                      let itemTotal = productPrice * product.quantity;
                      let itemDiscountedTotal = itemTotal;

                      if (product.discountInfo && product.discountInfo.percent > 0) {
                      itemDiscountedTotal = product.discountInfo.finalPrice * product.quantity;
                      hasDiscount = true;
                      }

                      price += itemTotal;
                      discountedTotal += itemDiscountedTotal;
                      %>
                      <div
                        style="display: flex; gap: 1.5rem; background: white; padding: 1.5rem; border-radius: var(--border-radius-md); box-shadow: var(--shadow-sm); position: relative;">

                        <!-- Image -->
                        <div
                          style="width: 100px; height: 100px; background: #f9f9f9; border-radius: 4px; overflow: hidden; flex-shrink: 0;">
                          <img src="<%= productImage %>" style="width: 100%; height: 100%; object-fit: contain;">
                        </div>

                        <!-- Details -->
                        <div style="flex: 1;">
                          <h3 style="font-size: 1.1rem; margin-bottom: 0.5rem; font-family: var(--font-body);">
                            <%= productTitle %>
                          </h3>

                          <div
                            style="font-size: 1rem; font-weight: 600; color: var(--color-accent-primary); margin-bottom: 1rem;">
                            <% if(product.discountInfo && product.discountInfo.percent> 0) { %>
                              <span
                                style="text-decoration: line-through; color: var(--color-text-secondary); font-size: 0.9rem; margin-right: 5px;">PKR
                                <%= productPrice %></span>
                              PKR <%= product.discountInfo.finalPrice %>
                                <% } else { %>
                                  PKR <%= productPrice %>
                                    <% } %>
                          </div>

                          <div style="display: flex; align-items: center; justify-content: space-between;">
                            <!-- Quantity Control -->
                            <div
                              style="display: flex; align-items: center; border: 1px solid var(--color-border); border-radius: 4px; padding: 2px 8px;">
                              <a href="/sub-quantity/<%= productId %>"
                                style="padding: 5px; color: var(--color-text-secondary);"><i
                                  class="ri-subtract-line"></i></a>
                              <span style="margin: 0 10px; font-weight: 500; font-size: 0.9rem;">
                                <%= product.quantity %>
                              </span>
                              <a href="/add-quantity/<%= productId %>"
                                style="padding: 5px; color: var(--color-text-secondary);"><i
                                  class="ri-add-line"></i></a>
                            </div>

                            <!-- Remove -->
                            <a href="/remove-from-cart/<%= productId %>"
                              style="color: #dc2626; font-size: 0.9rem; display: flex; align-items: center; gap: 5px;">
                              <i class="ri-delete-bin-line"></i> Remove
                            </a>
                          </div>
                        </div>
                      </div>
                      <% }) %>
                </div>

                <!-- Checkout Form / Summary -->
                <div
                  style="background: white; padding: 2rem; border-radius: var(--border-radius-lg); box-shadow: var(--shadow-sm); position: sticky; top: 2rem;">
                  <h3
                    style="font-size: 1.3rem; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid var(--color-border);">
                    Order Summary</h3>

                  <ul style="margin-bottom: 1.5rem; display: flex; flex-direction: column; gap: 0.8rem;">
                    <li style="display: flex; justify-content: space-between; font-size: 0.95rem;">
                      <span>Subtotal</span>
                      <span>PKR <%= price.toFixed(2) %></span>
                    </li>
                    <% if(hasDiscount) { %>
                      <li
                        style="display: flex; justify-content: space-between; font-size: 0.95rem; color: var(--color-accent-primary);">
                        <span>Discount</span>
                        <span>- PKR <%= (price - discountedTotal).toFixed(2) %></span>
                      </li>
                      <% } %>
                        <li style="display: flex; justify-content: space-between; font-size: 0.95rem;">
                          <span>Shipping</span>
                          <span>PKR 250.00</span>
                        </li>
                        <li
                          style="display: flex; justify-content: space-between; font-size: 1.1rem; font-weight: 700; border-top: 1px dashed var(--color-border); padding-top: 1rem; margin-top: 0.5rem;">
                          <span>Total</span>
                          <span>PKR <%= (discountedTotal + 250).toFixed(2) %></span>
                        </li>
                  </ul>

                  <form action="/checkout" method="POST">
                    <h4 style="font-size: 1rem; font-weight: 600; margin-bottom: 1rem;">Shipping Details</h4>

                    <div style="display: flex; flex-direction: column; gap: 1rem;">
                      <input type="text" name="fullName" placeholder="Full Name" required
                        style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                      <input type="email" name="email" placeholder="Email Address" required
                        style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                      <input type="text" name="phoneNumber" placeholder="Phone Number" required
                        style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                      <input type="text" name="street" placeholder="Street Address" required
                        style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <input type="text" name="city" placeholder="City" required
                          style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                        <input type="text" name="state" placeholder="State" required
                          style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                      </div>
                      <input type="text" name="zip" placeholder="ZIP Code" required
                        style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                    </div>

                    <!-- Hidden Inputs required by backend -->
                    <input required name="cart" value="cart" type="hidden">
                    <input required name="totalPrice" value="<%= (discountedTotal + 250).toFixed(2) %>" type="hidden">

                    <button type="submit" class="btn btn-primary"
                      style="width: 100%; margin-top: 1.5rem; padding: 1rem;">
                      Checkout (Cash on Delivery)
                    </button>
                    <a href="/" class="btn btn-outline"
                      style="width: 100%; margin-top: 0.5rem; text-align: center; display: block;">Continue Shopping</a>
                  </form>

                </div>

              </div>
              <% } %>

    </div>
  </main>

  <style>
    @media(max-width: 900px) {
      .cart-layout {
        grid-template-columns: 1fr !important;
        gap: 2rem !important;
      }
    }
  </style>

  <%- include('./partials/Footer.ejs') %>