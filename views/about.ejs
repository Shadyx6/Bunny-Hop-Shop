<%- include('./partials/Header.ejs') %>

    <main style="padding: var(--spacing-xl) 0; min-height: 80vh; background-color: var(--color-bg-primary);">
        <div class="container">

            <div
                style="background: white; border-radius: var(--border-radius-lg); box-shadow: var(--shadow-md); overflow: hidden;">
                <div
                    style="display: flex; flex-direction: column; md:flex-row; grid-template-columns: 1fr 1fr; gap: 0;">

                    <!-- Desktop Layout: Split -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; min-height: 600px;" class="about-grid">

                        <!-- Image/Brand Side -->
                        <div
                            style="background: #FFE4E1; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 4rem; text-align: center;">
                            <div
                                style="width: 200px; height: 200px; border-radius: 50%; overflow: hidden; margin-bottom: 2rem; border: 5px solid white; box-shadow: var(--shadow-sm);">
                                <img src="/media/logo.jpg" alt="Bunny Hop"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                            <h1
                                style="font-family: var(--font-heading); font-size: 3rem; margin-bottom: 1rem; line-height: 1.2;">
                                Bunny <br> H<span style="color: var(--color-accent-primary);">o</span>p
                            </h1>
                            <p style="font-size: 1.1rem; color: var(--color-text-secondary); max-width: 300px;">
                                Cute clothes. Tiny shoes. Precious moments. âœ¨
                            </p>

                            <div style="display: flex; gap: 1.5rem; margin-top: 2rem;">
                                <a href="https://www.instagram.com/shopbunnyhop_21/" target="_blank"
                                    style="font-size: 1.5rem; color: var(--color-text-secondary); transition: color 0.2s;">
                                    <i class="ri-instagram-line"></i>
                                </a>
                                <a href="mailto:info@bunnyhop.com"
                                    style="font-size: 1.5rem; color: var(--color-text-secondary); transition: color 0.2s;">
                                    <i class="ri-mail-open-line"></i>
                                </a>
                                <a href="tel:03138190150"
                                    style="font-size: 1.5rem; color: var(--color-text-secondary); transition: color 0.2s;">
                                    <i class="ri-phone-line"></i>
                                </a>
                            </div>
                        </div>

                        <!-- Content Side -->
                        <div
                            style="background: white; padding: 4rem; display: flex; flex-direction: column; justify-content: center;">
                            <span
                                style="font-size: 5rem; font-weight: 700; color: #f0f0f0; line-height: 1; margin-bottom: -1rem; display: block;">Hi</span>
                            <h2 style="font-size: 2.5rem; font-family: var(--font-heading); margin-bottom: 1.5rem;">
                                Here's who I am & what I do</h2>

                            <p
                                style="font-size: 1.1rem; line-height: 1.8; color: var(--color-text-secondary); margin-bottom: 2rem;">
                                Hi, I'm <span style="font-weight: 600; color: var(--color-text-primary);">Mahi</span>,
                                founder of Bunny H<span style="color: var(--color-accent-primary);">o</span>p.
                                We offer imported baby clothing and shoes that are cute, comfortable, and
                                pocket-friendly for parents.
                                Our work is simple: soft comfort and prices that work for every family.
                            </p>

                            <div style="display: flex; gap: 1rem;">
                                <a href="mailto:info@bunnyhop.com" class="btn btn-primary">Contact Me</a>
                                <a href="/" class="btn btn-outline">Explore Shop</a>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </main>

    <style>
        @media (max-width: 768px) {
            .about-grid {
                grid-template-columns: 1fr !important;
            }

            .about-grid>div {
                min-height: auto !important;
                padding: 3rem !important;
            }
        }
    </style>

    <%- include('./partials/Footer.ejs') %>