<%- include('./partials/Header.ejs', {hidden: true}) %>

    <main style="padding: var(--spacing-xl) 0; background-color: var(--color-bg-secondary); min-height: 80vh;">
        <div class="container">

            <!-- Flash Messages -->
            <% if(typeof error !=='undefined' && error.length> 0) { %>
                <div
                    style="background: #fee2e2; color: #dc2626; padding: 1rem; border-radius: var(--border-radius-md); margin-bottom: 2rem; text-align: center;">
                    <%= error[0] %>
                </div>
                <% } %>
                    <% if (typeof success !=='undefined' && success.length> 0) { %>
                        <div
                            style="background: #dcfce7; color: #166534; padding: 1rem; border-radius: var(--border-radius-md); margin-bottom: 2rem; text-align: center;">
                            <%= success[0] %>
                        </div>
                        <% } %>

                            <div style="display: grid; grid-template-columns: 250px 1fr; gap: 2rem;">

                                <!-- Sidebar -->
                                <aside>
                                    <%- include('./partials/SellerSidebar.ejs') %>
                                </aside>

                                <!-- Main Content -->
                                <section
                                    style="background: white; padding: 2.5rem; border-radius: var(--border-radius-lg); box-shadow: var(--shadow-sm);">
                                    <div
                                        style="margin-bottom: 2rem; border-bottom: 1px solid var(--color-border); padding-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
                                        <h2 style="font-size: 1.5rem; margin: 0;">Manage Categories</h2>
                                    </div>

                                    <!-- Add Category Form -->
                                    <div class="bg-white p-6 rounded-lg shadow-sm mb-8"
                                        style="border: 1px solid var(--color-border); padding: 1.5rem; border-radius: 8px;">
                                        <h3 class="text-lg font-bold mb-4 font-heading text-primary"
                                            style="font-size: 1.2rem; margin-bottom: 1rem;">Add New Category</h3>
                                        <form action="/seller/create-category" method="post"
                                            enctype="multipart/form-data"
                                            style="display: flex; gap: 1rem; align-items: flex-end; flex-wrap: wrap;">
                                            <div style="flex: 1; min-width: 200px;">
                                                <label class="block text-sm font-medium text-gray-700 mb-1"
                                                    style="display: block; margin-bottom: 0.5rem;">Category Name</label>
                                                <input type="text" name="name" required
                                                    class="w-full px-4 py-2 border rounded-full focus:ring-2 focus:ring-pink-300 outline-none"
                                                    style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                                            </div>
                                            <div style="flex: 1; min-width: 200px;">
                                                <label class="block text-sm font-medium text-gray-700 mb-1"
                                                    style="display: block; margin-bottom: 0.5rem;">Category Label
                                                    Image</label>
                                                <input type="file" name="image" required
                                                    class="w-full px-4 py-2 border rounded-full focus:ring-2 focus:ring-pink-300 outline-none"
                                                    style="width: 100%; padding: 0.8rem; border: 1px solid var(--color-border); border-radius: 4px;">
                                            </div>
                                            <button type="submit" class="btn btn-primary" style="padding: 0.8rem 2rem;">
                                                Add Category
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Existing Categories List -->
                                    <h3 style="font-size: 1.2rem; margin-bottom: 1rem; margin-top: 2rem;">Existing
                                        Categories</h3>
                                    <div
                                        style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 1.5rem;">
                                        <% if(typeof categories !=='undefined' && categories.length> 0) { %>
                                            <% categories.forEach(function(cat) { %>
                                                <div
                                                    style="border: 1px solid var(--color-border); border-radius: 8px; overflow: hidden; text-align: center;">
                                                    <div style="height: 120px; overflow: hidden;">
                                                        <img src="<%= cat.image %>" alt="<%= cat.name %>"
                                                            style="width: 100%; height: 100%; object-fit: cover;">
                                                    </div>
                                                    <div style="padding: 1rem;">
                                                        <h4 style="margin: 0; color: var(--color-text-primary);">
                                                            <%= cat.name %>
                                                        </h4>
                                                    </div>
                                                </div>
                                                <% }) %>
                                                    <% } else { %>
                                                        <p style="color: var(--color-text-secondary);">No categories
                                                            found.</p>
                                                        <% } %>
                                    </div>

                                </section>

                            </div>
        </div>
    </main>

    <%- include('./partials/Footer.ejs') %>